<section class="course-detail-main">
  <aside class="course-filter">
    <button class="filter-button">Courses ⌄</button>
    <button class="filter-button">Course Types ⌄</button>
    <button class="filter-button">Countries ⌄</button>
    <button class="filter-button">Cities ⌄</button>
    <button class="filter-button">Partners ⌄</button>
    <button class="clear-button">Clear</button>
  </aside>

  <div class="course-list">
    <h2 class="course-list-title">Upcoming Courses</h2>

    {[
      {
        date: "Sep 18, 2025",
        title: "SAFe Agilist Course",
        location: "Brookeline, MA",
        instructor: "Dan Rawsthorne",
        link: "/safe-agilist"
      },
      {
        date: "Sep 19, 2025",
        title: "Scrum Master Course",
        location: "Brookeline, MA",
        instructor: "Doug Shimp",
        link: "/safe-scrum-master"
      },
      {
        date: "Oct 3–4, 2025",
        title: "Certified ScrumMaster®",
        location: "London, UK",
        instructor: "Doug Shimp",
        link: "https://www.scrumalliance.org/courses-events/search/coursedetail?id=202506977"
      },
      {
        date: "Nov 1–2, 2025",
        title: "Agile Leadership Essentials",
        location: "New York, NY",
        instructor: "Michael Lee",
        link: "https://www.scrumalliance.org/courses-events/search/coursedetail?id=202504071"
      }
    ].map(course => {
      let thumbSrc = "default.png";
      if (course.title.includes("SAFe Agilist Course")) {
        thumbSrc = saImg.src;
      } else if (course.title.includes("Scrum Master Course")) {
        thumbSrc = ssmImg.src;
      } else if (course.title.includes("Certified ScrumMaster")) {
        thumbSrc = "csm1.png";
      } else if (course.title.includes("Agile Leadership Essentials")) {
        thumbSrc = "cspo.webp";
      }

      return (
        <div class="course-card">
          <img src={thumbSrc} alt="Course Thumbnail" class="course-thumb" />
          <div class="course-card-content">
            <div class="course-card-info">
              <div><strong>Date:</strong> {course.date}</div>
              <div><strong>Title:</strong> {course.title}</div>
              <div><strong>Location:</strong> {course.location}</div>
              <div><strong>Instructor:</strong> {course.instructor}</div>
            </div>
            <a href={course.link} target="_blank" rel="noopener">
              <button class="learn-more-btn">Learn More</button>
            </a>
          </div>
        </div>
      );
    })}
  </div>
</section>

<style>
  .course-detail-main {
    display: flex;
    padding: 64px 48px;
    gap: 48px;
    background-color: #111;
  }

  .course-filter {
    display: flex;
    flex-direction: column;
    gap: 12px;
    min-width: 160px;
  }

  .filter-button {
    background-color: #1f1f1f;
    color: white;
    padding: 10px 16px;
    border-radius: 8px;
    border: none;
    text-align: left;
  }

  .clear-button {
    background-color: white;
    color: black;
    padding: 8px 16px;
    border-radius: 8px;
    font-weight: bold;
    border: none;
  }

  .course-list {
    flex: 1;
  }

  .course-list-title {
    color: white;
    font-size: 24px;
    margin-bottom: 24px;
  }

  .course-card {
    background-color: #2a2a2a;
    padding: 20px 24px;
    border-radius: 8px;
    margin-bottom: 24px;
    display: flex;
    align-items: flex-start;
    gap: 20px;
  }

  .course-thumb {
    width: 96px;
    height: 96px;
    object-fit: cover;
    border-radius: 8px;
  }

  .course-card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .course-card-info {
    display: grid;
    grid-template-columns: 120px 1fr;
    row-gap: 8px;
    column-gap: 16px;
    font-size: 16px;
    color: white;
  }

  .course-card-info div {
    display: contents;
  }

  .course-card-info strong {
    color: #ccc;
    font-weight: 500;
    margin-right: 8px;
  }

  .learn-more-btn {
    border: 1px solid #aaa;
    border-radius: 20px;
    padding: 8px 20px;
    background: transparent;
    color: white;
    font-weight: 500;
    transition: background 0.2s ease;
    margin-left: 16px;
  }

  .learn-more-btn:hover {
    background: #444;
  }
</style>