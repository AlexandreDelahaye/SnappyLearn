import CourseIcon from "../../assets/courseDetail.svg";
import ReviewIcon from "../../assets/courseDetail1.svg";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Course Detail</title>
  <link rel="stylesheet" href="/styles.css" /> <!-- replace with your global stylesheet -->

  <style>
    .course-detail-grid,
    .course-detail-grid h1,
    .course-detail-grid h2,
    .course-detail-grid h3,
    .course-detail-grid h4,
    .course-detail-grid h5,
    .course-detail-grid h6,
    .course-detail-grid p,
    .course-detail-grid a,
    .course-detail-grid li,
    .course-detail-grid span,
    .course-detail-grid button {
    color: white;
}
  </style>
</head>
<body>

  <!-- Top Header already in place -->

  <!-- Banner -->
  <div class="hero-banner" style="position: relative;">
    <div>
      <h1>COURSES</h1>
      <p style="font-size: 20px; line-height: 1.6; color: white; max-width: 720px; margin-top: 12px;">
        1–2 day training courses are specifically designed to prepare you for the Agile certification exams from SAFe, Scrum.org, and Scrum Alliance.
      </p>
    </div>
